#footer
  color: color-grey
  position: absolute
  width: 100%
  bottom: 0

#footer-info
  padding-left: 5px
  padding-bottom: 10px
  text-align: left
  float: left
  @media mq-mobile
    text-align: center
    float: none
  a
    color: color-link
    text-decoration: none
    &:hover
      color: color-link-lighten

#page-nav
  padding-right: 5px
  max-width: 50%
  text-align: right
  float: right
  @media mq-mobile
    max-width: 100%
    float: none
    text-align: center
  *
    display: inline-block
    padding: 0 5px
  a:hover
    text-decoration: none
    color: color-link-lighten
  span.nav-title
    max-width: 70%
    vertical-align: bottom
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap
