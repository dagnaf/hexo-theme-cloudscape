.page-header
  padding: 0 abs(mobile-margin)
  .header-nav
    margin-top: 22px

.header-nav
  @media mq-mobile
    float: none
    text-align: center
    margin-top: 0 !important

.header-nav-list
  list-style: none
  margin: 0
  li
    display: inline-block
    padding: 0 5px
    &.selected
      background-color: color-background
      border-radius: 10px;
      &.submenu a
        &:after
          content: attr(data-submenu)
          background-color: color-image-background
          border-radius: 7px
          padding: 0 4px
          margin-left: 3px
          margin-right: -1px
        &:hover:after
          color: color-link

.header-link
  &:hover
    text-decoration: none
    color: color-link-lighten

.header-title
  padding-top: 10px
  margin-bottom: 10px
  @media mq-mobile
    float: none
    text-align: center
