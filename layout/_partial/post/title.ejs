<% if (post.link){ %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
    <% if ( !is_post() ) { %>
      <small><a class="post-external-link" href="<%- url_for(post.path) %>"><i class="fa fa-external-link"></i></a></small>
    <% } %>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h1>
  <% } else { %>
    <h1 class="<%= class_name %>" itemprop="name">
      <%= post.title %>
    </h1>
  <% } %>
<% } else if ( !is_home() && !is_post() ) { %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= __('no_title') %></a>
  </h1>
<% } else if ( is_home() ) { %>
  <a class="no-title" href="<%- url_for(post.path) %>"><i class="fa fa-link"></i></a>
<% } %>
