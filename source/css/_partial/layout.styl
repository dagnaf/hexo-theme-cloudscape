html
  height: 100%

body
  height: 100%
  background: color-background

@keyframes slide
  0%
    background-position: 0 bottom
  100%
    background-position: 562px bottom

.bg-cloud
  position: absolute
  width: 100%
  height: 144px
  background-color: color-image-background
  @media mq-mobile
    height: 170px
  &:before
    content: ""
    display: block
    background: url(cloud-url) left bottom repeat-x
    position: absolute
    top: 0
    width: 100%
    height: 100%
    overflow: hidden
    animation: slide 20s linear infinite
    -webkit-animation: slide 5s linear infinite

.page-container
  position: relative
  min-height: 100%
  width: 100%
  max-width: 768px
  margin: 0 auto
  overflow: hidden

#main
  padding-bottom: 50px
  @media mq-mobile
    padding-bottom: 100px
